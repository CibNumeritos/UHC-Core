{
    "namespace": "hud",
    "hud_actionbar_text": {
        "type": "image",
        "size": [
            "100%c + 12px",
            "100%c + 5px"
        ],
        // "offset": [
        //     0,
        //     "50%-75px"
        // ],
        "texture": "textures/ui/hud_tip_text_background",
        "anchor_from": "top_right",
        "anchor_to": "top_right",
        "alpha": "@hud.anim_actionbar_text_background_alpha_out",
        "controls": [
            {
                "actionbar_message": {
                    "type": "label",
                    // "anchor_to": "bottom_right",
                    "color": "$tool_tip_text",
                    "layer": 31,
                    "text": "$actionbar_text",
                    "localize": false,
                    "alpha": "@hud.anim_actionbar_text_alpha_out"
                }
            }
        ]
    }
}